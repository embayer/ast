#!/usr/bin/env bash
#
# feed urls to ast.js
# $1: the url file
# $2: sleep timeout (to avoid capture) (optional)

FILE="$1"
TIMEOUT=${2:-300}

count=0
length=$(wc -l < $FILE|bc)

while read line; do
    rm data/cookies.txt 2> /dev/null
    # feed a line
    casperjs --cookies-file=data/cookies.txt ast.js $line
    if [ $? -ne 0 ]; then
        echo "capture error sleeping for:"
        secs=600
        echo "sleeping for:"
        while [[ $secs -gt 0 ]]; do
            # TODO: format minutes
            echo -ne "$secs\033[0K\r"
            sleep 1
            : $((secs--))
        done
    fi

    count=$((count+1))
    echo "finished $count"

    # don't wait after last line
    if [[ ! $count -eq $length ]];
    then
        # display a timer
        secs=$TIMEOUT
        echo "sleeping for:"
        while [[ $secs -gt 0 ]]; do
            # TODO: format minutes
            echo -ne "$secs\033[0K\r"
            sleep 1
            : $((secs--))
        done
    fi

done <"$FILE"
